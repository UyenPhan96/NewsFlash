    <div class="main-content">
        <h2 class="tieudiemtuan">TIÊU ĐIỂM TUẦN</h2>
        <div class="grid-container">
            <div class="news-detail">
                <div class="news-header">
                    <div class="news-categories">
                        @foreach (var category in Model.Categories)
                        {
                            <span class="news-category">@category.NameCategory</span>
                        }
                    </div>
                    <div class="news-date">@Model.PublishDate.ToString("dddd, d/M/yyyy, HH:mm (GMT+7)")</div>
                </div>
                <div class="news-content">
                    <h1>@Model.Title</h1>

                    <p>@Html.Raw(Model.Content)</p>

                </div>
            </div>

        </div>

        <h2>CÓ THỂ BẠN QUAN TÂM</h2>
        <div class="recommendations">
            @foreach (var related in Model.RelatedNews)
            {
                <div class="recommendation-item">
                    <img src="/Images/@related.Image" alt="Ảnh bài viết @related.Title">
                    <div class="recommendation-content">
                        <h3><a href="/Home/Privacy/@related.NewsId">@related.Title</a></h3>
                        <p class="date-time">Ngày đăng: <span>@related.PublishDate.ToString("dddd, d/M/yyyy, HH:mm (GMT+7)")</span></p>
                    </div>
                </div>
            }
        </div>
        <h2>CÁC BÀI VIẾT KHÁC</h2>
        <div class="tech-news">
            <div class="news-list">
                <div class="news-row">
                    @foreach (var news in Model.Allnews)
            {
                <div class="recommendation-item">
                    <img src="/Images/@news.Image" alt="Ảnh bài viết @news.Title">
                    <div class="recommendation-content">
                        <h3><a href="/Home/Privacy/@news.NewsId">@news.Title</a></h3>
                        <p class="date-time">Ngày đăng: <span>@news.PublishDate.ToString("dddd, d/M/yyyy, HH:mm (GMT+7)")</span></p>
                    </div>
                </div>
            }
                </div>
            </div>
        </div>
      


        
