@model Web_News.Areas.Admin.ViewModels.NewsViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Chi Tiết Tin Tức";
}


<div class="results" id="results"></div>
