@model Web_News.Areas.Admin.ViewModels.ListViewModel;

@{
    ViewBag.title = "Trang chủ";
}

<body>
    <div class="results" id="results"></div>
    <div class="container">
        <div class="main-content">
            <h2 class="tieudiemtuan">
                <i class="fas fa-star"></i> TIÊU ĐIỂM TUẦN
            </h2>

            <div class="grid-container">
                <!-- Bài viết lớn trên cùng -->
                <article class="grid-item-large article">
                    <a class="article-link" href="@Url.Action("Privacy", "Home", new { id = Model.LatestNews[0].NewsId })">
                        <div class="article-headers">
                            <img src="/Images/@Model.LatestNews[0].Image" alt="Ảnh bài viết lớn">
                            <div class="article-contents">
                                <h3>@Model.LatestNews[0].Title</h3>
                                <p class="article-summary">@Html.Raw(Model.LatestNews[0].Content.Substring(0, Math.Min(Model.LatestNews[0].Content.Length, 500)))...</p>
                            </div>
                        </div>
                    </a>
                </article>

                <!-- Các bài viết nhỏ dưới cùng -->
                @for (int i = 1; i < Model.LatestNews.Count && i < 4; i++)
                {
                    <article class="article grid-item-small">
                        <a class="article-link" href="@Url.Action("Privacy", "Home", new { id = Model.LatestNews[i].NewsId })">
                            <div class="article-header">
                                <img src="/Images/@Model.LatestNews[i].Image" alt="Ảnh bài viết @i">
                                <div class="article-content">
                                    <h3>@Model.LatestNews[i].Title</h3>
                                </div>
                            </div>
                            <p>@Html.Raw(Model.LatestNews[i].Content.Substring(0, Math.Min(Model.LatestNews[i].Content.Length, 100)))...</p>
                        </a>
                    </article>
                }
            </div>

            <h2 class="news-title">
                <i class="fas fa-thumbs-up"></i> CÓ THỂ BẠN QUAN TÂM
            </h2>
            <div class="recommendations">
                @foreach (var news in Model.RecommendedNews)
                {
                    <div class="recommendation-item">
                        <img src="/Images/@news.Image" alt="Ảnh bài viết">
                        <div class="recommendation-content">
                            <h3><a href="@Url.Action("Privacy", "Home", new { id = news.NewsId })">@news.Title</a></h3>
                            <p class="date-time">Ngày đăng: @news.PublishDate.ToShortDateString()</p>

                        </div>
                    </div>
                }
            </div>

            <h2 class="news360-title">
                <i class="fas fa-bolt"></i> TIN NHANH 360
            </h2>
            <div class="news-360">
                <div class="grid-container">
                    <!-- Bài viết lớn trên cùng -->
                    @if (Model.News360 != null && Model.News360.Count > 1)
                    {
                        <article class="grid-item-large article">
                            <div class="article-headers">
                                <img src="/Images/@Model.News360[1].Image" alt="Ảnh bài viết lớn">
                                <div class="article-contents">
                                    <h3>
                                        <a href="@Url.Action("Privacy", "Home", new { id = Model.News360[1].NewsId })">
                                            @Model.News360[1].Title
                                        </a>
                                    </h3>
                                    <div class="article-meta">
                                        <!-- Thông tin meta -->
                                    </div>
                                    <p class="article-summary">
                                        @Html.Raw(Model.News360[1].Content.Substring(0, Math.Min(Model.News360[0].Content.Length, 500)))...
                                    </p>

                                </div>
                            </div>
                        </article>
                    }

                    <!-- Các bài viết nhỏ dưới cùng -->
                    @foreach (var newsItem in Model.News360.Skip(2))
                    {
                        <article class="article grid-item-small">
                            <div class="article-header">
                                <img src="/Images/@newsItem.Image" alt="Ảnh bài viết @newsItem.Title">
                                <div class="article-content">
                                    <h3>
                                        <a href="@Url.Action("Privacy", "Home", new { id = newsItem.NewsId })">
                                            @newsItem.Title
                                        </a>
                                    </h3>
                                    <div class="article-meta">
                                        <!-- Thông tin meta -->
                                    </div>
                                </div>
                            </div>
                            <p>@Html.Raw(newsItem.Content.Substring(0, Math.Min(newsItem.Content.Length, 100)))...</p>

                        </article>
                    }
                </div>
            </div>

