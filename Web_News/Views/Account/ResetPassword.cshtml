@model Web_News.ViewModels.ResetPasswordViewModel

@{
    ViewData["Title"] = "Đổi mật khẩu";
    Layout = "_LayoutForgotPassword";
}

<h2>@ViewData["Title"]</h2>

@if (ViewData.ModelState.Any(x => x.Value.Errors.Count > 0))
{
    <div class="alert alert-danger">
        @Html.ValidationSummary(true)
    </div>
}

<div class="form-container">
    <form asp-action="ResetPassword" method="post">
        <div class="info-text">
            <h1>Đổi mật khẩu</h1>
            <h3>Nhập mã xác nhận và mật khẩu mới của bạn.</h3>

        </div>

        <div id="countdown" class="alert alert-info" style="margin-bottom: 20px;">
            Mã xác nhận sẽ hết hạn trong <span id="time">1:00</span> phút.
        </div>


        <div class="form-group">
            <label asp-for="ResetCode" class="control-label">Mã xác nhận</label>
            <input asp-for="ResetCode" class="form-control" placeholder="Nhập mã xác nhận" />
            <span asp-validation-for="ResetCode" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="NewPassword" class="control-label">Mật khẩu mới</label>
            <input asp-for="NewPassword" type="password" class="form-control" placeholder="Mật khẩu mới" />
            <span asp-validation-for="NewPassword" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="ConfirmNewPassword" class="control-label">Xác nhận mật khẩu</label>
            <input asp-for="ConfirmNewPassword" type="password" class="form-control" placeholder="Xác nhận mật khẩu" />
            <span asp-validation-for="ConfirmNewPassword" class="text-danger"></span>
        </div>

        <div class="form-footer">
            <div>
                <button type="submit" class="nut-custom">Đổi mật khẩu</button>
            </div>
            <div class="signup-text">
                <a asp-action="Login" class="signup-link">Quay lại đăng nhập</a>
            </div>
        </div>
    </form>
</div>
