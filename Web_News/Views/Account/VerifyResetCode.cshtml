@model Web_News.ViewModels.VerifyResetCodeViewModel

@{
    ViewData["Title"] = "Xác nhận mã";
    Layout = "_LayoutForgotPassword";
}

<h2>@ViewData["Title"]</h2>


<div class="form-container">
    <form asp-action="VerifyResetCode" method="post" onsubmit="storeTimeLeft()">
        <div class="info-text">
            <h1>Xác nhận mã</h1>
            @if (ViewData.ModelState.Any(x => x.Value.Errors.Count > 0))
            {
                <div class="alert alert-danger">
                    @Html.ValidationSummary(true)
                </div>
            }
            <h3>Nhập mã xác nhận được gửi đến email của bạn.</h3>
        </div>

        <div class="form-group">
            <label asp-for="ResetCode" class="control-label">Mã xác nhận</label>
            <input asp-for="ResetCode" class="form-control" placeholder="Nhập mã xác nhận" />
            <span asp-validation-for="ResetCode" class="text-danger"></span>
        </div>

        <div class="form-footer">
            <div>
                <button type="submit" class="nut-custom">Xác nhận</button>
            </div>
            <div class="signup-text">
                <a asp-action="ForgotPassword" class="signup-link">Quay lại</a>
            </div>
        </div>
    </form>
</div>

