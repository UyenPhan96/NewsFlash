@model Web_News.ViewModels.LoginViewModel
@{
    ViewBag.title = "Đăng nhập";
    Layout = "_LayoutLogin";
}


<header>
    <div class="header">
        <div id="logo">
            <a href="/">
                <img src="~/images/newlogo.jpg" alt="Logo" />
            </a>
        </div>
    </div>
</header>


<div class="parent">
    <div class="container">
        <!-- Form đăng nhập -->
        <div class="login-form-wrapper">
            <a href="/" id="logo-form">
                <div id="logo2">
                    <img src="/images/newlogo.jpg" alt="NewFlash">
                </div>
            </a>
            <h5 class="font-weight-light">Đăng nhập</h5>
            <form asp-action="Login" method="post" class="pt-3 auth-form-light">
                @if (ViewData.ModelState.ErrorCount > 0)
                {
                    <div class="alert alert-danger">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    </div>
                }
                <div class="form-group">
                    <div class="input-group">
                        <span asp-validation-for="UsernameOrEmail" class="text-danger"></span>
                        <input asp-for="UsernameOrEmail" class="form-control form-control-lg" id="usernameOrEmail" placeholder="Email" type="text" />
                        <span class="input-group-text" id="toggle-usernameOrEmail">
                        </span>
                        </<div>
                        </div>

                        <div class="form-group">
                            <div class="input-group">
                                <span asp-validation-for="Password" class="text-danger"></span>
                                <input asp-for="Password" type="password" class="form-control form-control-lg" id="password" placeholder="Mật khẩu" />
                                <span class="input-group-text" id="toggle-password">
                                    <i class="fas fa-eye-slash"></i>
                                </span>
                            </div>

                        </div>

                        <div class="my-2 d-flex justify-content-between align-items-center">
                            <a asp-controller="Account" asp-action="ForgotPassword" class="auth-link text-black">Quên mật khẩu?</a>
                            <div class="text-center mt-4 font-weight-light">
                                Chưa có tài khoản? <a asp-controller="Account" asp-action="Register" class="text-primary">Đăng ký</a>
                            </div>
                        </div>
                        <div class="mt-3 d-flex justify-content-center">
                            <button type="submit" class="nut-custom">ĐĂNG NHẬP</button>
                        </div>
                        <div class="my-2 separator-container d-flex justify-content-center align-items-center">
                            <hr class="separator" />
                            <span class="separator-text">HOẶC</span>
                            <hr class="separator" />
                        </div>
                        <div class="mb-2">
                            <button type="button" class="btn btn-facebook auth-form-btn" onclick="window.location.href='@Url.Action("SiginFB", "Account")'">
                                <img src="/images/fb.png" alt="Facebook" class="btn-icon me-2">
                                Facebook
                            </button>
                            <button type="button" class="btn btn-google auth-form-btn" onclick="window.location.href='@Url.Action("SiginGG", "Account")'">
                                <img src="/images/gg.png" alt="Google" class="btn-icon me-2">
                                Google
                            </button>
                        </div>
            </form>
        </div>
    </div>
</div>