@model Web_News.ViewModels.RegisterViewModel

@{
    ViewData["Title"] = "Register";
    ViewBag.Title = "Register";
    Layout = "_LayoutLogin";
}


<form asp-action="Register" method="post" class="pt-3">
    <div class="form-group">
        <input asp-for="Username" class="form-control form-control-lg"  placeholder="Username" />
        <span asp-validation-for="Username" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input asp-for="Email" class="form-control form-control-lg"  placeholder="Email" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input asp-for="Name" class="form-control form-control-lg" placeholder="Full Name" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input asp-for="Password" type="password" class="form-control form-control-lg"  placeholder="Password" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input asp-for="ConfirmPassword" type="password" class="form-control form-control-lg"  placeholder="Confirm Password" />
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
    </div>

    <div class="mb-4">
        <div class="form-check">
            <label class="form-check-label text-muted">
                <input type="checkbox" class="form-check-input"> Tôi đồng ý với điều khoản
            </label>
        </div>
    </div>

    <div class="mt-3">
        <button type="submit" class="nut-custom">Đăng Ký</button>
    </div>

    <div class="text-center mt-4 font-weight-light">
        Bạn đã có tài khoản? <a asp-controller="Account" asp-action="Login" class="text-primary">Đăng Nhập</a>
    </div>
</form>
