@model Web_News.ViewModels.RegisterViewModel

@{
    ViewBag.title = "Đăng kí";
    Layout = "_LayoutLogin";

}

<header>
    <div class="header">
        <div id="logo">
            <a href="/">
                <img src="~/images/newlogo.jpg" alt="Logo" />
            </a>
        </div>
    </div>
</header>

<div class="container">
    <!-- Form đăng ký -->
    <div class="login-form-wrapper">
        <a href="/Views/trang-chu/index.html" id="logo-form">
            <div id="logo2">
                <img src="~/images/newlogo.jpg" alt="Logo" />
            </div>
        </a>
        <h5 class="font-weight-light">Đăng ký</h5>
        <form asp-action="Register" method="post" class="pt-3 auth-form-light">
            <div class="form-group">
                <input asp-for="Username" class="form-control form-control-lg" placeholder="Tên tài khoản" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>


            <div class="form-group">
                <input asp-for="Email" class="form-control form-control-lg" placeholder="Email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input asp-for="Name" class="form-control form-control-lg" placeholder="Họ và tên" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <div class="input-group">
                    <input asp-for="Password" type="password" class="form-control form-control-lg" id="password" placeholder="Mật khẩu" />
                    <span class="input-group-text" id="toggle-password">
                        <i class="fas fa-eye-slash"></i>
                    </span>
                </div>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>


            <div class="form-group">
                <div class="input-group">
                    <input asp-for="ConfirmPassword" type="password" class="form-control form-control-lg" id="confirm-password" placeholder="Nhập lại mật khẩu" />
                    <span class="input-group-text" id="toggle-confirm-password">
                        <i class="fas fa-eye-slash"></i>
                    </span>
                </div>
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>



            <div class="mt-3" style="margin-top: 30px;">
                <button type="submit" class="nut-custom">ĐĂNG KÝ</button>
            </div>


            <div class="text-center mt-4 font-weight-light" style="text-align: center; margin-top: 20px; margin-bottom: 20px;">
                Đã có tài khoản? <a asp-controller="Account" asp-action="Login" class="text-primary">Đăng nhập</a>
            </div>

        </form>
    </div>
</div>


