@model IEnumerable<Web_News.Models.Category>

@{
    ViewData["Title"] = "Danh sách danh mục";
}

<p>
    <a asp-action="Create" class="btn btn-primary">Tạo danh mục mới</a>
</p>

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Bảng danh mục</h4>
            <hr />
            <table class="table">
                <thead>
                    <tr>
                        <th>STT</th>
                        <th>Tên danh mục</th>
                        <th>Mô tả</th>
                        <th>Hành động</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        var stt = 1; 
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>@stt</td>
                                <td>@item.NameCategory</td>
                                <td>@item.Describe</td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.CategoryId" class="btn btn-warning btn-sm">Sửa</a> |
                                    <a asp-action="Delete" asp-route-id="@item.CategoryId" class="btn btn-danger btn-sm">Xóa</a>
                                </td>
                            </tr>
                            stt++; 
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="4" class="text-center">Không có danh mục nào</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
