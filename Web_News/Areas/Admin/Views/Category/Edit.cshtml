@model Web_News.Models.Category

@{
    ViewData["Title"] = "Edit Category";

}

<h1>Edit Category</h1>

<form asp-action="Edit" asp-controller="Category" method="post">
    <input type="hidden" asp-for="CategoryId" />

    <div class="form-group">
        <label asp-for="NameCategory"></label>
        <input asp-for="NameCategory" class="form-control" />
        <span asp-validation-for="NameCategory" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Describe" class="control-label"></label>
        <input asp-for="Describe" class="form-control" />
        <span asp-validation-for="Describe" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ParentCategoryId"></label>
        <select asp-for="ParentCategoryId" class="form-control" asp-items="ViewBag.ParentCategories">
            <option value="">-- Select Parent Category --</option>
        </select>
        <span asp-validation-for="ParentCategoryId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Cập nhật</button>
</form>

<div>
    <a asp-action="GetAllCategory">Back to List</a>
</div>
