@model Web_News.Models.Category

@{
    ViewData["Title"] = "Chỉnh sửa danh mục";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-header bg-gradient-dark text-white">
            <h4 class="mb-0">Chỉnh sửa danh mục</h4>
        </div>
        <div class="card-body">
            <form asp-action="Edit" asp-controller="Category" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="CategoryId" />

                <!-- Tên danh mục -->
                <div class="form-group">
                    <label asp-for="NameCategory">Tên danh mục</label>
                    <input asp-for="NameCategory" class="form-control" placeholder="Nhập tên danh mục" />
                    <span asp-validation-for="NameCategory" class="text-danger"></span>
                </div>

                <!-- Mô tả -->
                <div class="form-group">
                    <label asp-for="Describe" class="control-label">Mô tả</label>
                    <input asp-for="Describe" class="form-control" placeholder="Nhập mô tả danh mục" />
                    <span asp-validation-for="Describe" class="text-danger"></span>
                </div>

                <!-- Danh mục cha -->
                <div class="form-group">
                    <label asp-for="ParentCategoryId">Danh mục cha</label>
                    <select asp-for="ParentCategoryId" class="form-control" asp-items="ViewBag.ParentCategories">
                        <option value="">-- Chọn danh mục cha --</option>
                    </select>
                    <span asp-validation-for="ParentCategoryId" class="text-danger"></span>
                </div>

                <!-- Nút hành động -->
                <div class="d-flex justify-content-between mt-4">
                    <button type="submit" class="btn btn-gradient-dark">
                        <i class="mdi mdi-file-check btn-icon-prepend"></i>Cập nhật
                    </button>
                    <a asp-action="GetAllCategory" class="btn btn-outline-secondary">Quay lại</a>
                </div>
            </form>
        </div>
    </div>
</div>
