@model Web_News.Models.Category

@{
    ViewData["Title"] = "Thêm mới danh mục";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card shadow-sm">
        <div class="card-header bg-gradient-dark text-white">
            <h4 class="mb-0">Thêm mới danh mục</h4>
        </div>
        <div class="card-body">
            @if (!ViewData.ModelState.IsValid)
            {
                <div class="alert alert-danger">
                    @Html.ValidationSummary(true)
                </div>
            }

            <form asp-action="Create" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <!-- Tên danh mục -->
                <div class="form-group">
                    <label asp-for="NameCategory" class="font-weight-bold">Tên danh mục</label>
                    <input asp-for="NameCategory" class="form-control" placeholder="Nhập tên danh mục" />
                    <span asp-validation-for="NameCategory" class="text-danger"></span>
                </div>

                <!-- Mô tả -->
                <div class="form-group">
                    <label asp-for="Describe" class="font-weight-bold">Mô tả</label>
                    <textarea asp-for="Describe" class="form-control" placeholder="Nhập mô tả"></textarea>
                    <span asp-validation-for="Describe" class="text-danger"></span>
                </div>

                <!-- Danh mục cha -->
                <div class="form-group">
                    <label asp-for="ParentCategoryId" class="font-weight-bold">Danh mục cha</label>
                    <select asp-for="ParentCategoryId" class="form-control" asp-items="ViewBag.ParentCategories">
                        <option value="">-- Chọn danh mục cha --</option>
                    </select>
                    <span asp-validation-for="ParentCategoryId" class="text-danger"></span>
                </div>

                <!-- Nút hành động -->
                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-gradient-dark btn-icon-text">Thêm</button>
                    <a asp-action="GetAllCategory" class="btn btn-outline-secondary">Quay lại</a>
                </div>
            </form>
        </div>
    </div>
</div>
