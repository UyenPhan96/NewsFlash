@using Web_News.Areas.Admin.ServiceAd.AdvertisementSV
@model List<Web_News.Models.Advertisement>

<li class="nav-item dropdown">
    <a class="nav-link count-indicator dropdown-toggle" id="notificationDropdown" href="#" data-bs-toggle="dropdown">
        <i class="mdi mdi-bell-outline"></i>
        @if (Model.Any(notification => !notification.IsRead))
        {
            <span class="count-symbol bg-danger"></span>
        }
    </a>
    <div class="dropdown-menu dropdown-menu-right navbar-dropdown preview-list" aria-labelledby="notificationDropdown">
        <h6 class="p-3 mb-0">Notifications</h6>
        <div class="dropdown-divider"></div>
        @foreach (var notification in Model)
        {
            // Kiểm tra trạng thái IsRead và thêm lớp CSS thích hợp
            <a class="dropdown-item preview-item @(notification.IsRead ? "text-muted" : "font-weight-bold")"
               asp-controller="Advertisement"
               asp-action="Approve"
               asp-route-id="@notification.AdvertisementId">

                <div class="preview-thumbnail">
                    <div class="preview-icon bg-success">
                        <i class="mdi mdi-calendar"></i>
                    </div>
                </div>

                <div class="preview-item-content d-flex align-items-start flex-column justify-content-center">
                    <h6 class="preview-subject mb-1 @(notification.IsRead ? "text-muted" : "font-weight-bold")">@notification.ContactName</h6>
                    <p class="text-gray ellipsis mb-0 @(notification.IsRead ? "text-muted" : "")">@notification.Content</p>
                    <small class="text-muted">@EnumExtensions.TimeAgo(notification.CreatedDate)</small>

                </div>
            </a>
            <div class="dropdown-divider"></div>
        }
        <h6 class="p-3 mb-0 text-center">See all notifications</h6>
    </div>
</li>

<style>
    .text-muted {
        color: #6c757d; /* Màu nhạt hơn cho thông báo đã đọc */
    }

    .font-weight-bold {
        font-weight: bold; /* Làm cho thông báo chưa đọc đậm hơn */
    }
</style>

