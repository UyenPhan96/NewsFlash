@model Web_News.Areas.Admin.ViewModels.NewsViewModel

@{
    ViewData["Title"] = "News Details";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <div class="card-header bg-gradient-dark text-white">
                <h4 class="mb-0">Thông tin bài viết</h4>
            </div>
            <hr />
            <div style="text-align: center;">
                <h1> <strong> @Model.Title</strong></h1>
            </div>
            <h4><strong>Người tạo:</strong> @Model.CreatedByUserName</h4>
            <h4><strong>Ngày đăng:</strong> @Model.PublishDate.ToString("dd/MM/yyyy")</h4>



            <h4><strong>- Nội dung:</strong> @Html.Raw(Model.Content)</h4>

     
        </div>
    </div>
</div>


@if (ViewBag.ReturnUrl != null)
{
    <a href="@ViewBag.ReturnUrl" class="btn btn-outline-secondary">Quay lại </a>
}
else
{
    <a href="@Url.Action("Index", "News")" class="btn btn-outline-secondary">Quay lại </a>
}