@model Web_News.Areas.Admin.ViewModels.NewsViewModel

@{
    ViewData["Title"] = "News Details";
}

<h1>@Model.Title</h1>

<div>
    <img src="@Model.Image" alt="@Model.Title" style="max-width: 300px; height: auto;" />
</div>

<div>
    <h3>Content</h3>
    <p>@Model.Content</p>
</div>

<div>
    <p><strong>Publish Date:</strong> @Model.PublishDate.ToString("MMMM dd, yyyy")</p>
    <p><strong>Created By:</strong> @Model.CreatedByUserName</p>
    <p><strong>Status:</strong> @Model.Status</p>
</div>

<div>
    <h3>Categories</h3>
    <ul>
        @foreach (var category in Model.Categories)
        {
            <span class="badge bg-secondary">@category.NameCategory</span>
        }
    </ul>
</div>

<a href="@Url.Action("Index", "News")" class="btn btn-secondary">Back to List</a>
