@model IEnumerable<Web_News.Areas.Admin.ViewModels.NewsViewModel>

@{
    ViewData["Title"] = "All News";
}

<div class="container">
    <h1>@ViewData["Title"]</h1>
    <p>
        <a asp-action="Create" class="btn btn-success">Create News</a>
    </p>
    <table class="table table-bordered table-striped">
        <thead class="thead-dark">
            <tr>
                <th>Image</th>
                <th>Title</th>
                <th>Publish Date</th>
                <th>Created By</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <img src="@item.Image" alt="@item.Image" style="max-width: 120px; height: auto; border-radius: 5px;" />
                    </td>
                    <td>@item.Title</td>
                    <td>@item.PublishDate.ToString("dd MMM yyyy")</td>
                    <td>@item.CreatedByUserName</td>
                    <td>
                        <span class="badge @(item.Status == "Published" ? "bg-success" : "bg-warning")">
                            @item.Status
                        </span>
                    </td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.NewsId" class="btn btn-info btn-sm">Details</a>
                        <a asp-action="Edit" asp-route-id="@item.NewsId" class="btn btn-primary btn-sm">Edit</a>
                        <a asp-action="Delete" asp-route-id="@item.NewsId" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
