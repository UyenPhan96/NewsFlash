@model Web_News.Areas.Admin.ViewModels.NewsViewModel

@{
    ViewBag.Title = "Create News";
}

<h2>Create News</h2>

@using (Html.BeginForm("Create", "News", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.LabelFor(model => model.Title)
        @Html.TextBoxFor(model => model.Title, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Content)
        @Html.TextAreaFor(model => model.Content, new { @class = "form-control", rows = 5 })
        @Html.ValidationMessageFor(model => model.Content, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Image)
        <input type="file" name="Image" class="form-control" />
        @Html.ValidationMessageFor(model => model.Image, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Status)
        @Html.TextBoxFor(model => model.Status, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Status, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.Label("Categories")
        @foreach (var category in Model.Categories)
        {
            <div class="checkbox">
                <label>
                    <input type="checkbox" name="SelectedCategories" value="@category.CategoryId" />
                    @category.NameCategory
                </label>
            </div>
        }
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
    <a href="@Url.Action("Index", "News")" class="btn btn-secondary">Cancel</a>
}
