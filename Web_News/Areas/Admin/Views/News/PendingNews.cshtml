@model IEnumerable<Web_News.Areas.Admin.ViewModels.NewsViewModel>

@{
    ViewData["Title"] = "Bài viết chờ duyệt";

}
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Tìm kiếm</h4>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th style="font-weight: bold;">Tiêu đề</th>
                        <th style="font-weight: bold;">Người tạo</th>
                        <th style="font-weight: bold;">Ngày đăng</th>
                        <th style="font-weight: bold;">Thể loại</th>
                        <th style="font-weight: bold;">Hành động</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Title</td>
                            <td>@item.CreatedByUserName</td>
                            <td>@item.PublishDate.ToString("dd/MM/yyyy")</td>
                            <td>
                                @foreach (var category in item.ListCategories)
                                {
                                    <span class="badge bg-secondary">@category.NameCategory</span>
                                }
                            </td>
                            <td>
                                <a href="@Url.Action("NewsDetail", new { newsId = item.NewsId })" class="btn btn-primary">Xem chi tiết</a>

                                <button class="btn btn-danger reject-btn" data-newsid="@item.NewsId">Từ chối</button>

                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/jquery/dist/jquery.js"></script>
<script>
    $(document).ready(function() {
        // Khi nhấn vào nút "Từ chối", hiển thị SweetAlert để xác nhận
        $('.reject-btn').click(function() {
            var newsId = $(this).data('newsid');

            Swal.fire({
                title: "Bạn muốn từ chối bài viết này?",
                text: "...",
                icon: "warning",
                showCancelButton: true,
                confirmButtonColor: "#3085d6",
                cancelButtonColor: "#d33",
                confirmButtonText: "Từ chối"
            }).then((result) => {
                if (result.isConfirmed) {
                    // Gửi yêu cầu từ chối qua AJAX nếu người dùng xác nhận
                      $.ajax({
                    url: '@Url.Action("RejectNews", "News", new { area = "Admin" })',
                    type: 'POST',
                    data: {
                        newsId: newsId,
                        rejectionReason: 'Lý do từ chối' // Bạn có thể thay đổi lý do nếu cần
                    },
                    success: function(response) {
                        Swal.fire(
                            'Thành công',
                            'Bài viết của bạn đã bị từ chối.',
                            'success'
                        ).then(function() {
                            // Sau khi từ chối, bạn có thể làm gì đó (ví dụ: reload trang)
                            window.location.reload(); // Tải lại trang
                        });
                    },
                    error: function() {
                        Swal.fire(
                            'Có lỗi xảy ra!',
                            'Không thể từ chối bài viết.',
                            'error'
                        );
                    }
                });

                }
            });
        });
    });
</script>